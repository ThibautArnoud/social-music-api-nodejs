<% include partials/header %>
   <h1><%=user.displayName%></h1>
   <h2><%=user.username%></h2>
   <hr/>
   <h3>Favorite Songs</h3>
   <% if(songs == 0){ %>
     <strong>You have no favorite songs</strong>
   <%}else { %>
   <form method="post" action="/songs/favorite/all?_method=delete" class="form-inline">
     <button type="submit" class="btn btn-default">Delete all songs</button>
   </form>
   <table class="table table-striped table-bordered">
       <tr>
           <th>Title</th>
           <th>Album</th>
           <th>Artist</th>
           <th>Year</th>
           <th>BPM</th>
           <th></th>
       </tr>
       <% songs.forEach(function(song) {%>
         <tr>
           <td>
             <a href="/songs/<%=song._id%>"><%=song.title%></a>
           </td>
           <td><%=song.album%></td>
           <td><%=song.artist%></td>
           <td>
             <% if (song.year) { %><%=song.year%><% } %>
           </td>
           <td>
             <% if (song.bpm) { %><%=song.bpm%><% } %>
           </td>
           <td>
             <form method="post" action="/songs/<%= song._id%>/favorite?_method=delete" class="form-inline">
               <button type="submit" class="btn btn-default">Delete</button>
             </form>
          </td>
         </tr>
       <% }) %>
   </table>
   <%}%>
<% include partials/footer %>
